<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_mental_hearth"
    tools:context="com.psijuego.ui.views.report.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp96"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/before_starting"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/dp24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/tvPatientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp16"
                android:layout_marginTop="@dimen/dp32"
                android:backgroundTint="@color/light_gray"
                android:fontFamily="@font/open_sans_semibold"
                android:hint="@string/patient_name"
                android:inputType="textCapSentences"
                android:textColor="@color/light_gray"
                android:textColorHint="@color/hint_light_gray"
                android:textSize="@dimen/dp16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <EditText
                android:id="@+id/tvProfessionalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp16"
                android:layout_marginTop="@dimen/dp8"
                android:backgroundTint="@color/light_gray"
                android:fontFamily="@font/open_sans_semibold"
                android:hint="@string/professional_name"
                android:inputType="textCapSentences"
                android:textColor="@color/light_gray"
                android:textColorHint="@color/hint_light_gray"
                android:textSize="@dimen/dp16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPatientName" />

            <EditText
                android:id="@+id/tvRegistrationNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp16"
                android:layout_marginTop="@dimen/dp8"
                android:backgroundTint="@color/light_gray"
                android:fontFamily="@font/open_sans_semibold"
                android:hint="@string/registration_number"
                android:inputType="textCapSentences"
                android:textColor="@color/light_gray"
                android:textColorHint="@color/hint_light_gray"
                android:textSize="@dimen/dp16"
                android:gravity="top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvProfessionalName" />


            <LinearLayout
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp48"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRegistrationNumber">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_upload_file_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Adjuntar \ndibujo"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp14" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/dp168"
                android:layout_height="@dimen/dp168"
                android:layout_marginTop="@dimen/dp48"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRegistrationNumber"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="@dimen/dp24"
                android:layout_height="@dimen/dp24"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/ivImage"
                app:layout_constraintTop_toTopOf="@id/ivImage"
                app:srcCompat="@drawable/ic_trash_white" />

            <EditText
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp16"
                android:layout_marginTop="@dimen/dp48"
                android:layout_marginBottom="@dimen/dp32"
                android:backgroundTint="@color/light_gray"
                android:fontFamily="@font/open_sans_semibold"
                android:hint="@string/draw_description"
                android:textColor="@color/light_gray"
                android:inputType="textCapSentences|textMultiLine"
                android:textColorHint="@color/hint_light_gray"
                android:textSize="@dimen/dp16"
                app:layout_constraintBottom_toTopOf="@+id/btnNext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnUpload"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp88"
                android:layout_marginBottom="@dimen/dp64"
                android:backgroundTint="@color/light_gray"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Siguiente"
                android:textColor="@color/blue_mental_hearth"
                android:textSize="@dimen/dp16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>